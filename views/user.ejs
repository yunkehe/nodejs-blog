<%- include header %>
<% if(user.head){ %>
<a href="/u/<%=user.name%>"><img src="<%=user.head%>" alt="头像" class="l_head" /></a>
<% } %>
<% blogs.forEach(function(v){ %>
	<div class="article-box">
	<h2><a href="/u/<%=v.author%>/<%=v._id%>%>"><%= v.title %></a></h2>
	<p class="info">
		<span>作者：</span><a href="#"><%= v.author %></a>|
		<span>时间：</span><span><%= v.time.localString %></span>
	</p>
	<p><%- v.article %></p>
	</div>
<% }) %>

<%- include pagination %>
<%- include footer %>