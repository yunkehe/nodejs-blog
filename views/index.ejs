<%- include header %>
<% blogs.forEach(function(v){ %>
	<div class="article-box">
	<h2>
		<a href="/u/<%=v.author%>/<%=v._id%>"><%= v.title %></a>
		<% if(v.head){ %>
		<a href="/u/<%=v.author%>"><img src="<%=v.head%>" alt="头像" class="r_head" /></a>
		<% } %>
	</h2>
	<p class="info">
		<span>作者：</span><a href="/u/<%= v.author %>"><%= v.author %></a>|
		<span>时间：</span><span><%= v.time.localString %></span>
	</p>
	<p><%- v.article %></p>
	</div>
<% }) %>
<%- include pagination %>
<%- include footer %>