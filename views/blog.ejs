<%- include header %>
	<div class="article-box">
	<% if( user && user.name === blog.author){%>
	<p>
		<a href="/edit/<%= blog.author %>/<%= blog._id %>" class="edit">编辑</a>
		<a href="/remove/<%= blog.author %>/<%= blog._id %>" class="edit">删除</a>
	</p>
	<% } %>
	<h2><a href="#"><%= blog.title %></a></h2>
	<p class="info">
		<span>作者：</span><a href="/u/<%= blog.author %>"><%= blog.author %></a> |
		<span>时间：</span><span><%= blog.time.localString %></span> |
		<span>阅读：</span><em><%= blog.pv || 0 %></em> |
		<span>留言：</span><em><%= blog.comments.length || 0 %></em>
	</p>
	<p><%- blog.article %></p>
	</div>
	
<%- include comment%>
<%- include footer %>